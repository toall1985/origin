<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.module.originresolver" name="Origin Resolver" version="0.1.5" provider-name="Origin">
	<requires>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="plugin.video.youtube" optional="true"/>
		<import addon="script.module.requests"/>
	</requires>
    <extension point="xbmc.python.module" library="lib"/>
    <extension point="xbmc.python.pluginsource" library="lib/originresolver.py"/>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Simple resolver plugin to resolve URL's by Origin</summary>
		<description lang="en">Resolve common video host URL's to be playable in XBMC/Kodi, simplify addon development of video plugins requiring multi video hosts.</description>
	</extension>
</addon>
